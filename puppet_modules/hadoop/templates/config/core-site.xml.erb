<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
  <property>
    <name>fs.default.name</name>
    <value>hdfs://<%= scope.lookupvar('hadoop::config::hadoop_namenode') -%>:8020</value>
  </property>

  <property>
     <name>hadoop.tmp.dir</name>
     <value>/tmp/hadoop/cache/${user.name}</value>
  </property>

  <property>
    <name>io.buffer.size</name>
    <value>131072</value>
  </property>

  <property>
    <name>fs.trash.interval</name>
    <value>40320</value>
  </property>

  <property>
    <name>fs.checkpoint.dir</name>
    <value><%= scope.lookupvar('hadoop::config::hadoop_default_dirs').collect {|hadoop_disk| hadoop_disk + "/hadoop/dfs/second_namenode"}.join(',') -%></value>
  </property>

  <property>
    <name>webinterface.private.actions</name>
    <value>true</value>
  </property>

  <property>
    <name>io.compression.codecs</name>
    <value>org.apache.hadoop.io.compress.GzipCodec,org.apache.hadoop.io.compress.DefaultCodec,org.apache.hadoop.io.compress.BZip2Codec</value>
  </property>
